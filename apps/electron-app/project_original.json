{
  "name": "electron-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/electron-app/src",
  "projectType": "application",
  "targets": {
    "build": {
      "asar": false,
      "executor": "nx-electron:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/apps/electron-app",
        "main": "apps/electron-app/src/main.ts",
        "tsConfig": "apps/electron-app/tsconfig.app.json",
        "assets": [
          "apps/electron-app/src/assets"
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/electron-app/src/environments/environment.ts",
              "with": "apps/electron-app/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "electron-app:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "electron-app",
        "frontendProject": "angular-app",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true,
        "extraResources": [
          {
            "from": "node_modules/call-bind-apply-helpers",
            "to": "node_modules/call-bind-apply-helpers"
          },
          {
            "from": "./resources/",
            "to": "resources"
          },
          {
            "from": "./db/",
            "to": "db"
          },
          {
            "from": "dist/api-server",
            "to": "api-server"
          },
          { "from": "node_modules/better-sqlite3", "to": "node_modules/better-sqlite3" },
          {
    "from": "node_modules/bindings",
    "to": "node_modules/bindings"
  }
        ],
        "asarUnpack": [
          "node_modules/call-bind-apply-helpers/**"
        ]
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "electron-app",
        "frontendProject": "angular-app",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables",
        "extraResources": [
          {
            "from": "node_modules/call-bind-apply-helpers",
            "to": "node_modules/call-bind-apply-helpers"
          },
          {
            "from": "./resources/",
            "to": "resources"
          },
          {
            "from": "./db/network.sqlite",
            "to": "db"
          },
          {
            "from": "dist/api-server",
            "to": "api-server"
          },
          { "from": "node_modules/better-sqlite3", "to": "node_modules/better-sqlite3" },
          {
    "from": "node_modules/bindings",
    "to": "node_modules/bindings"
  }
        ],
        "asarUnpack": [
          "node_modules/call-bind-apply-helpers/**"
        ]
      }
    },
    "lint": {
      "command": "eslint apps/electron-app/**/*.ts"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/electron-app/jest.config.ts"
      }
    }
  }
}